
<%- include('header.ejs') %>
<div class="container">
    
    <h2>TRANG SẢN PHẨM</h2>
    <div class="row">
        <% pro.forEach(item=>{ %>
            <div class="col-sm-3 col-md-6 col-lg-4" style="margin-top: 10px;">
                <div class="card" style="width:300px;">
                    <img class="card-img-top" src="<%= item.hinhanh %>" alt="Card image" style="max-height: 200px;">
                    <div class="card-body">
                        <h4 class="card-title"><%= item.tensp %></h4>
                        <p class="card-text"><%= item.giasp %></p>
                        <a href="#" class="btn btn-primary">Đặt mua</a>
                    </div>
              </div>
            </div>

        <% }) %>
    </div>
   
  </div>
<%- include('footer.ejs') %>